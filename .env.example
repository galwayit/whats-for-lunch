# API Configuration Template
# Copy this file to .env.local for development or configure environment variables in production

# ================================
# Google Places API Configuration
# ================================
# Get your API key from: https://console.cloud.google.com/
# Enable: Places API, Maps SDK for Android/iOS
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Optional: Restrict API key to specific domains/apps
# Set in Google Cloud Console under API key restrictions
GOOGLE_PLACES_RESTRICT_DOMAINS=yourdomain.com,*.yourdomain.com

# Request rate limiting (requests per minute)
GOOGLE_PLACES_MAX_REQUESTS_PER_MINUTE=60

# Daily quota limits (to prevent cost overruns)
GOOGLE_PLACES_DAILY_QUOTA_LIMIT=10000

# ============================
# Gemini AI API Configuration  
# ============================
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Model configuration
GEMINI_MODEL=gemini-1.5-flash
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=1000

# Cost control (dollars per day per user)
GEMINI_DAILY_COST_LIMIT=5.0

# Request throttling (requests per minute per user)
GEMINI_MAX_REQUESTS_PER_MINUTE=10

# Cache configuration
GEMINI_ENABLE_CACHING=true
GEMINI_CACHE_TTL_HOURS=24

# ========================
# Environment Configuration
# ========================
# Options: development, staging, production
APP_ENVIRONMENT=development

# Enable/disable API features based on environment
ENABLE_AI_FEATURES=true
ENABLE_PLACES_API=true
ENABLE_DEBUG_LOGGING=true

# ========================
# Security Configuration
# ========================
# API endpoints allowed to use the keys
ALLOWED_BUNDLE_IDS=com.yourcompany.whatwehaveforlunch
ALLOWED_PACKAGE_NAMES=com.yourcompany.whatwehaveforlunch

# Encryption key for sensitive data storage (generate with: openssl rand -hex 32)
API_ENCRYPTION_KEY=your_32_character_hex_encryption_key_here

# ========================
# Monitoring Configuration
# ========================
# Enable usage tracking and alerts
ENABLE_USAGE_MONITORING=true
ENABLE_COST_ALERTS=true

# Alert thresholds (percentage of daily limits)
COST_ALERT_THRESHOLD=80
REQUEST_ALERT_THRESHOLD=90

# Optional: Webhook URL for alerts
ALERT_WEBHOOK_URL=https://yourmonitoring.service/webhooks/api-alerts

# ========================
# Fallback Configuration
# ========================
# Enable fallback to cached/sample data when APIs are unavailable
ENABLE_FALLBACK_MODE=true

# Grace period before fallback (seconds)
API_TIMEOUT_SECONDS=30

# Sample data source when APIs are unavailable
FALLBACK_DATA_SOURCE=local_cache